{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "es2022",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*.astro"],
      "@layouts/*": ["src/layouts/*.astro"],
      "@data/*": ["src/data/*.ts"],
      "@lib/*": ["src/lib/*.ts"],
      "@assets/*": ["src/assets/*"],
      "@style/*": ["src/style/*"],
      "@content/*": ["src/content/*"]
    }
  }
}

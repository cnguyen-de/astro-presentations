---
export interface Props {
  title?: string
  theme?: string
  logo?: boolean
}
const { title, theme = 'black', logo = false } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />

    <title>{title}</title>

    <link rel="stylesheet" href="/reveal/reveal.css" />
    <link rel="stylesheet" href={`/reveal/theme/${theme}.css`} id="theme" />
    <link rel="stylesheet" href="/reveal/plugin/highlight/monokai.css" />
  </head>

  <body>
    <div class="reveal relative">
      <div class="slides">
        <slot />
      </div>
      {logo && <img src="/logo.png" alt="" class="absolute z-10 bottom-[4%] right-[4%] w-36" />}
    </div>

    <script is:inline src="/reveal/reveal.js"></script>
    <script is:inline src="/reveal/plugin/markdown/markdown.js"></script>
    <script is:inline src="/reveal/plugin/highlight/highlight.js"></script>
    <script is:inline src="/reveal/plugin/notes/notes.js"></script>

    <script>
      Reveal.initialize({
        controls: false,
        progress: false,
        history: true,
        slideNumber: true,
        transition: 'none',
        center: true,
        plugins: [RevealMarkdown, RevealHighlight, RevealNotes]
      })
    </script>
  </body>
</html>

<style is:global>
  html {
    font-synthesis: none;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-text-size-adjust: 100%;
  }
  .reveal .slide-number {
    right: unset;
    left: 10px;
    background: none;
    font-size: 18px;
    font-weight: 700;
  }
</style>
